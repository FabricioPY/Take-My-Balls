<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgrald"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OpenGameActivity">


    <ImageView
        android:layout_width="267dp"
        android:layout_height="207dp"
        android:src="@drawable/taquemyballsleter"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="35dp" />


    <View
        android:id="@+id/ellipse_2"
        android:layout_width="1197dp"
        android:layout_height="341dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-34dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/backgrald_floor" />

    <ImageView
        android:id="@+id/personagen_"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/personagen" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_play"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/play_custom_button"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/fredoka_one_regular"
        android:foregroundTintMode="src_in"
        android:text="@string/play"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</RelativeLayout>